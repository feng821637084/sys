/*----------------- 验证不通过时,错误提示的样式 ---------------*/
.talentErrMsg
{
	font-family: Tahoma, 宋体;
	font-size:9pt;
	line-height: 15px;
	color: #B92D1E;

	text-decoration: none;
	padding:2px 4px 2px 8px;
	padding-left:22px;

	margin:-11px;
	margin-bottom:0px;

	background:url(./img/error.png) no-repeat 4px 2px;
	background-color: #fffff7;
	border:1px solid #fc0;
	border-radius: 5px;
	white-space: nowrap;
	
	
	/**让宽度自适应**/
	display: inline-block;
	
	/**inline-block在ie下无效，需要加下面两行。**/
	zoom: 1; 
    *display: inline;
}

